{
  "install": {
    "include": [
      "^package\\.json$",
      "^requirements.txt$",
      "^\\.env$"
    ]
  },
  "restart": {
    "exclude": [
      "^public/",
      "^dist/"
    ],
    "include": [
      "\\.js$",
      "\\.coffee$",
      "\\.json",
      "\\.py"
    ]
  },
  "throttle": 100
}
